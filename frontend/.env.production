# frontend/.env.production
# Cloudflare Pages 배포용 환경변수

# API 엔드포인트 (백엔드 배포 후 실제 URL로 변경)
REACT_APP_API_URL=https://webgame-inme-c21b.up.railway.app

# 빌드 최적화
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# 배포 환경 설정
NODE_ENV=production
PUBLIC_URL=/

# 웹사이트 정보
REACT_APP_SITE_TITLE= Minesweeper
REACT_APP_SITE_DESCRIPTION=지뢰찾기 게임
REACT_APP_SITE_URL=https://minesweeper-demo.pages.dev

# Google Analytics (선택사항)
# REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# 성능 최적화
REACT_APP_DISABLE_NEW_JSX_TRANSFORM=false
FAST_REFRESH=false